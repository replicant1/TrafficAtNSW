<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:id="@+id/ll_hazard_detail_text_field"
              android:layout_width="match_parent"
              android:paddingLeft="@dimen/margin_std"
              android:paddingRight="@dimen/margin_std"
              android:layout_height="48dp"
              android:orientation="horizontal">

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/tv_hazard_detail_field_name"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:clickable="false"
        android:fontFamily="sans-serif-light"
        android:gravity="center_vertical|left"
        android:maxLines="1"
        android:singleLine="true"
        android:textColor="@color/text_87_percent_black"
        tools:text="Field Name"
        android:layout_weight="1"
        android:textSize="13sp"/>

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/tv_hazard_detail_field_value"
        android:paddingLeft="@dimen/margin_std"
        android:layout_weight="1"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:clickable="false"
        android:fontFamily="sans-serif-light"
        android:gravity="center_vertical|right"
        android:maxLines="1"
        android:text="Field Value"
        android:singleLine="true"
        android:textColor="@color/text_87_percent_black"
        android:textSize="13sp"/>

</LinearLayout>