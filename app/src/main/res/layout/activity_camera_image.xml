<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_camera_image"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e0e0e0"
    android:gravity="center"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/fl_camera_image_card"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@color/White">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <!-- Traffic camera image -->

            <ImageView
                android:id="@+id/iv_camera_image"
                android:layout_width="310dp"
                android:layout_height="250dp"
                android:scaleType="fitCenter"
                tools:src="@drawable/alisonrd_randwick"/>

            <!-- Title -->

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/tv_camera_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left|center_vertical"
                android:paddingLeft="@dimen/margin_std"
                android:paddingRight="@dimen/margin_std"
                android:paddingTop="@dimen/margin_std"
                android:textSize="24sp"
                android:textColor="@color/text_87_percent_black"
                android:maxLines="1"
                android:singleLine="true"
                android:fontFamily="sans-serif"
                tools:text="Anzac Bridge"/>

            <!-- Subtitle -->

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/tv_camera_subtitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/margin_std"
                android:paddingRight="@dimen/margin_std"
                android:paddingTop="@dimen/margin_half_std"
                android:textColor="@color/text_87_percent_black"
                android:maxLines="1"
                android:singleLine="true"
                android:textSize="14sp"
                tools:text="Rozelle"/>

            <!-- Description -->

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/tv_camera_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="sans-serif-mdeium"
                android:gravity="left|center_vertical"
                android:paddingBottom="24dp"
                android:paddingTop="@dimen/margin_half_std"
                android:paddingLeft="@dimen/margin_std"
                android:paddingRight="@dimen/margin_std"
                android:textSize="13sp"
                android:textColor="@color/text_54_percent_black"
                tools:text="Intersection of Victoria XRoad and Anzac Bridge looking east towards the Sydney CBD."/>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>
