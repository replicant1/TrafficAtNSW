<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:id="@+id/ll_item_travel_time"
              android:background="?android:selectableItemBackground"
              android:layout_width="match_parent"
              android:layout_height="36dp"
              android:gravity="center_vertical"
              android:orientation="horizontal"
              android:paddingLeft="@dimen/margin_std"
              android:paddingRight="@dimen/margin_std">

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/tv_left_col_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:fontFamily="sans-serif"
        android:gravity="left"
        android:textColor="@color/text_87_percent_black"
        android:textSize="13sp"
        tools:text="Wahroonga - Mt Colah"/>

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/tv_right_col_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif"
        android:gravity="right"
        android:textColor="@color/text_87_percent_black"
        android:textSize="13sp"
        tools:text="8 mins"/>

</LinearLayout>